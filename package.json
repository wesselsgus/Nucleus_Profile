
{
  "name": "nucleus-terminal-ops",
  "private": true,
  "version": "2.4.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build:linux": "npm run build && electron-builder --linux deb rpm"
  },
  "dependencies": {
    "@google/genai": "^1.40.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.nucleus.ops",
    "productName": "NUCLEUS Terminal",
    "directories": {
      "output": "dist_desktop"
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "category": "TerminalEmulator",
      "maintainer": "Nucleus Systems <ops@nucleus.internal>"
    }
  }
}
